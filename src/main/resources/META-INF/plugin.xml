<idea-plugin>
    <id>com.qmui.Svg2Vector</id>
    <name>Svg2Vector</name>
    <version>1.2</version>
    <vendor url="https://github.com/QMUI">QMUI</vendor>

    <description><![CDATA[
      convert svg to vector drawable.<br>
    ]]></description>

    <change-notes><![CDATA[
      <b>1.0</b><br>
      <ul>
        <li>support name prefix</li>
        <li>support convert in batch</li>
      </ul>
      <b>1.1</b><br>
      <ul>
        <li>support multiple files selection</li>
      </ul>
      <b>1.2</b><br>
      <ul>
        <li>add plugin change notes</li>
      </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <!--<extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="SvgSettings"/>
    </extensions>-->

    <actions>
        <action id="Svg2Vector.Action" class="Action.Svg2VectorAction" text="Svg2Vector" description="Svg2Vector">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>


</idea-plugin>